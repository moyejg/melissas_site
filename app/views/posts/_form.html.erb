<%= form_with(model: @post) do |form| %> 

  <div class="form-group">
    <%= form.text_field :title, placeholder: 'Title', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.text_area :body, placeholder: 'Blog post goes here...', class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>



  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
